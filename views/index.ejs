<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Clientes | Listagem</title>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;500;600&display=swap" rel="stylesheet">

    <style>
        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Open Sans', sans-serif;
            background: linear-gradient(135deg, #d1c4e9, #b3e5fc);
            height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            color: #333;
        }

        h2 {
            margin-bottom: 20px;
            font-weight: 500;
            text-shadow: 1px 1px 2px rgba(255, 255, 255, 0.7);
        }

        .border {
            border: 1px solid #ccc;
            border-radius: 10px;
            width: 90%;
            max-width: 400px;
            background: rgba(255, 255, 255, 0.8);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            padding: 20px;
            margin: 20px 0;
            transition: transform 0.2s;
        }

        .border:hover {
            transform: scale(1.02);
        }

        ul {
            list-style-type: none;
        }

        li {
            margin: 10px 0;
            text-align: left;
        }

        li span {
            font-weight: 600;
            color: #5d4037; 
        }

        .index {
            font-size: 1.2em;
            font-weight: bold;
            color: #333;
            margin-bottom: 5px; 
        }
    </style>
</head>

<body>

    <h2>Clientes Cadastrados:</h2>

    <div class="border">
        <ul>
            <% lista.forEach(function(user, index){ %> 
                <li class="index">Cadastro <%= index + 1 %>:</li> 
                <li>Nome: <span><%= user.nome %></span></li>
                <li>E-mail: <span><%= user.email %></span></li>
                <li>Senha: <span><%= user.senha %></span></li>
                <hr> 
            <% }) %>
        </ul>
    </div>

</body>

</html>
